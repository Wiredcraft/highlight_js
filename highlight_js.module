<?php
/**
 * Implementation of hook_init()
 * This is the recommended place to add js/css to be used on all pages
 */
function highlight_js_init() {
  $path = drupal_get_path('module', 'highlight_js');
  $theme = variable_get('highlight_js_theme', 'default');


  // Loads from Yandex or from local depending on the settings.
  if (variable_get('highlight_js_use_online', 1)) {
    drupal_set_html_head('<script type="text/javascript" src="http://yandex.st/highlightjs/5.16/highlight.min.js" defer="defer"></script>');
    if (!empty($theme)) {
    	drupal_set_html_head('<link type="text/css" rel="stylesheet" media="all" href="http://yandex.st/highlightjs/5.16/styles/'. $theme .'.min.css" />');
    }
  }
  else {
    $library = highlight_js_get_path();
    drupal_add_js($library .'/highlight.min.js');
    if (!empty($theme)) drupal_add_css($library .'/styles/'. $theme .'.css');
  }

  // If we're loading a custom theme
  $custom = variable_get('highlight_js_theme_path', '');
  if (empty($theme) && !empty($custom)) drupal_add_css($custom);

  drupal_add_js($path .'/highlight_js.js');
}

/**
 * Implements hook_menu().
 */
function highlight_js_menu() {
  $items['admin/settings/highlight_js'] = array(
    'title' => 'Highlight.js',
    'description' => 'Configure highlight.js library\'s integration.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('highlight_js_settings_form'),
    'access arguments' => array('administer highlight.js'),
    'type' => MENU_NORMAL_ITEM,
    'file' => 'highlight_js.admin.inc',
  	'file_path' => drupal_get_path('module', 'highlight_js')
  );

  return $items;
}

/**
 * Implements hook_perm().
 */
function highlight_js_perm() {
  return array(
    'administer highlight.js'
  );
}

function highlight_js_get_path() {
	return variable_get('highlight_js_library_path', 'sites/all/libraries/highlight');
}